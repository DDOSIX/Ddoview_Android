<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="15dp"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/icon_back"
        />
    <ImageButton
        android:id="@+id/register"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/finish_button"
        />
    <TextView
        android:text="리뷰 작성하기"
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.notosansmonocjkkr_bold"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:layout_below="@id/title_bar"
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category"
        style="@style/Text.notosanscjkkr_thin"
        android:textSize="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/blue"
        />
    <TextView
        android:id="@+id/company"
        android:layout_below="@id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회사이름"
        android:layout_marginStart="15dp"
        style="@style/Text.notosansmonocjkkr_bold"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/intro"
        android:layout_below="@id/company"
        android:text="당신의 리뷰를 원합니다."
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        style="@style/Text.notosansmonocjkkr_regular"
        android:textColor="@color/black"
        android:textSize="14dp"
        />
    <TextView
        android:id="@+id/title"
        android:layout_below="@id/intro"
        android:text="리뷰를 작성해주세요"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        style="@style/Text.notosansmonocjkkr_bold"
        android:textColor="@color/black"
        android:textSize="16dp"
        />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/title"
        android:fillViewport="true"
        android:layout_marginTop="20dp"
        >
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:dividerHeight="0px"
            android:divider="#FFFFFF"
            />
    </ScrollView>
    <TextView
        android:id="@+id/review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView"
        android:layout_marginTop="20dp"
        android:text="리뷰 작성 시 주의할 점!"
        style="@style/Text.notosansmonocjkkr_bold"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/review_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_title"
        android:layout_marginTop="10dp"
        style="@style/Text.notosansmonocjkkr_regular"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle32"
        />

</RelativeLayout>